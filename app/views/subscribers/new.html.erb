<div class="row">
  <div id="blog-content" class="seven columns panel">
    <h2>Stay Informed</h2>
    
    <%= form_for @subscriber do |f| %>
    
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
      
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
      
      <%= f.label :address %>
      <%= f.text_field :address%>
      <%= f.text_field :address_two %>
      
      <%= f.label :city %>
      <%= f.text_field :city %>
      
      <%= f.label :state %>
      <%= f.select :state, us_states %>
      
      <%= f.label :zip %>
      <%= f.text_field :zip %>
      
      <%= f.label :email %>
      <%= f.text_field :email %>
      
      <%= f.label :phone %>
      <%= f.text_field :phone %>  
      
      <%= f.submit "Subscribe "%>
    <% end %>
    
  </div>
</div>